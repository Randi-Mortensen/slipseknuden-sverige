  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-6 control-label" for="product_name">BESKRIVELSE</label>  
  <div class="col-md-6">
  <input id="product_name" name="product_name" placeholder="Produktbeskrivelse" class="form-control input-md" required="" type="text">
    
  </div>
</div>

<!-- Text input-->
<div class="form-group">    
  <label class="col-md-6 control-label" for="product_name_fr">PRIS</label>  
  <div class="col-md-6">
  <input id="product_name_fr" name="product_name_fr" placeholder="Angiv pris" class="form-control input-md" required="" type="number">
    
  </div>
</div>

 <!-- File Button --> 
<div class="form-group">    
  <label class="col-md-6 control-label" for="filebutton">BILLEDE</label>
  <div class="col-md-6">
    <input id="filebutton" name="filebutton" class="input-file" type="text">
  </div>
</div>

<!-- Button -->
