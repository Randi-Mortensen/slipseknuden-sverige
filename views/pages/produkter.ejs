  <div class="container">

    <div id="alert"></div>
    <div class="panel-body col-md-6">
      <ul class="list-group" id="products">
        <% produkter.forEach((element, index)=>{%>
          <li class="list-group-item product">
            <div class="row">
              <div class="col-sm-4 product_img img-admin-product">
                <img src="/img/<%= element.produktbillede%>" class="img-thumbnail">
              </div>
              <div class="col-xs-10 col-md-11">
                <div>
                  <p class="producttitle">
                    <%= element.produktnavn%>
                  </p>
                </div>
                <div class="product-description">
                  <p class="productdescription">
                    <%=element.info%>
                  </p>
                </div>
                <div class="product-price">
                  <p class="pricetext">
                    <%= element.pris%> DKK </p>
                </div>
                <div class="action">
                  <a href="#" type="button" class="btn btn-primary btn-xs edit" data-id="<%= index%>" title="Rediger">
                    <span class="glyphicon glyphicon-pencil"></span>
                  </a>
                  <a href="#" type="button" class="btn btn-danger btn-xs delete" data-id="<%= index%>" title="Slet">
                    <span class="glyphicon glyphicon-trash"></span>
                  </a>
                </div>
              </div>
            </div>
          </li>
          <%})%>
      </ul>
    </div>
    
    <div class="panel-body col-md-6">
        <form class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>REDIGER PRODUKT</legend>

